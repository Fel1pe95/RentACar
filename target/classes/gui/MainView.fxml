<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainViewController">
   <children>
      <Pane prefHeight="500.0" prefWidth="200.0">
         <children>
            <Button fx:id="btCars" layoutX="25.0" layoutY="32.0" mnemonicParsing="false" onAction="#onBtCarsAction" prefHeight="30.0" prefWidth="150.0" text="Carros" />
